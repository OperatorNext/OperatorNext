# 应用配置
APP_ENV=development  # development, staging, production
DEBUG=true
PORT=8000
PYTHONDONTWRITEBYTECODE=1  # 禁止生成 .pyc 文件

# OpenAI 配置
OPENAI_API_BASE=your_api_base_url
OPENAI_API_KEY=your_api_key
OPENAI_MODEL=gpt-4o

# 数据库配置
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/operatornext

# AI 配置
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# 安全配置
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json
BROWSER_USE_LOGGING_LEVEL=info  # result | debug | info

# Redis 配置 (可选)
REDIS_URL=redis://localhost:6379/0

# MinIO 配置 (可选)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=http://localhost:9000

# 邮件配置 (可选)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@operatornext.com

# Vercel 部署配置
VERCEL_URL=
VERCEL_ENV=development  # development, preview, production

# Browser-use 配置
ANONYMIZED_TELEMETRY=true

# VNC 配置
VNC_PASSWORD=your_secure_password
DISPLAY_WIDTH=1920
DISPLAY_HEIGHT=1080
DISPLAY=:99

# Chrome 配置
CHROME_OPTS=--remote-debugging-port=9222 --remote-debugging-address=0.0.0.0 --no-sandbox
CHROME_PERSISTENT_SESSION=true

# 系统配置
PUID=1000
PGID=1000 